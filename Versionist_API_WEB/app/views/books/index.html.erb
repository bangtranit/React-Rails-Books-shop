<div class="container">
	<h1>List Books</h1>

	<table class="table">
	  <thead>
	    <tr>
	      <th width="30%">Title</th>
	      <th width="25%">Author</th>
	      <th width="15%">publisher</th>
	    </tr>
	  </thead>

	  <tbody>
	  	<% @books.each do |book|%>
	    <tr>
	      <td><%= book.title%></td>
	      <td><%= book.author%></td>
	      <td><%= book.publisher%></td>
	    </tr>
	    <%end%>
	  </tbody>
	</table>
	<button type="button" class="btn btn-primary">Primary</button>
</div>
